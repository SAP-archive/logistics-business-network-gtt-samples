<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		id="popover"
		class="sapUiContentNoPadding"
		contentWidth="20rem"
		placement="Auto"
		title="{i18n>locationDetail}"
		afterOpen="handleLocationQuickViewAfterOpen">
		<content>
			<form:SimpleForm id="simpleForm"
				editable="false"
				layout="ResponsiveGridLayout"
				labelSpanXL="12"
				labelSpanL="12"
				labelSpanM="12"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="4"
				emptySpanL="4"
				emptySpanM="2"
				emptySpanS="2"
				columnsXL="1"
				columnsL="1"
				columnsM="1"
				singleContainerFullSize="true">
				<form:content>
					<Title id="locationTitle" class="sofLocationPopoverTitle" text="{/locationDescription}"/>
					<Label id="objectTypeLabel" labelFor="objectType" text="{i18n>locationObjectType}"/>
					<Text id="objectType" text="{/objectTypeDescription}" />
					<Label id="sourceSystemIdLabel" labelFor="sourceSystemId" text="{i18n>sourceSystemId}"/>
					<Text id="sourceSystemId" text="{/sourceSystem} / {/externalId}"/>
					<Label id="addressLabel" labelFor="address" text="{i18n>address}"/>
					<Text id="address" text="{path: '/formattedAddress', formatter: '.formatter.formattedAddress'}">
						<layoutData>
							<layout:GridData span="XL10 L10 M10 S10"/>
						</layoutData>
					</Text>
					<core:Icon id="globeIcon" src="sap-icon://globe" color="{= ${/latitude} !== null ? 'Default' : 'Neutral' }"
						tooltip="{= ${/latitude} !== null ? ${/latitude} + ', ' + ${/longitude} : ${i18n>geoCoordinatesMissing} }"
						press=".onCoordinatePressed">
						<core:layoutData>
							<layout:GridData span="XL2 L2 M2 S2"/>
						</core:layoutData>
					</core:Icon>
				</form:content>
			</form:SimpleForm>
			<core:InvisibleText id="cooridateDescription" text="{= ${/latitude} !== null ? ${/latitude} + ', ' + ${/longitude} : ${i18n>geoCoordinatesMissing} }"/>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>
